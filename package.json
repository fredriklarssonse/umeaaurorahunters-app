{
	"name": "umeaaurorahunters-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"push": "git add . && git commit -m \"auto: update\" && git push origin main",
		"refresh:umea": "node -r dotenv/config scripts/refresh-current.js umea",
		"outlook:umea": "node -r dotenv/config scripts/refresh-outlook.js umea",
		"update:forecast": "node scripts/refresh-current.js",
		"cache:clear": "node -e \"require('fs').rmSync(process.env.WEATHER_CACHE_DIR||'cache',{recursive:true,force:true}); console.log('Cache cleared')\"",
		"spots:umea": "node -r dotenv/config scripts/suggest-spots.js umea",
		"spots:ostersund": "node -r dotenv/config scripts/suggest-spots.js ostersund",
		"spots:community:umea": "node -r dotenv/config scripts/spots-community.js umea",
    	"spots:community:geo": "node -r dotenv/config scripts/spots-community.js 63.83 20.27"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.56.0",
		"dotenv": "^17.2.1",
		"geotiff": "^2.1.4-beta.0",
		"node-fetch": "^3.3.2",
		"suncalc": "^1.9.0"
	}
}
